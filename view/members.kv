#:kivy 2.0.0

<MembersWindow>:
    ScreenManager:
        id: members_screen_manager
        MembersMainWindow:
        AddMembersWindow:
        EditMembersWindow:

<MembersMainWindow>:
    name: 'Members Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Members"
            use_overflow: True
            elevation: 10
            pos_hint: {"top": 1}
            #left_action_items: [['arrow-left', lambda x: app.root.switch_screen("Home Screen", "right")]]
            right_action_items: [['magnify']]
        ScrollView:
            MDList:
                id: members_list
        MDFloatingActionButton:
            icon: "plus"
            anchor: "right"
            on_release: root.parent.parent.switch_screen("Add Member Screen", "left")
            pos_hint: {"center_x": .95, "center_y": .5}
            #md_bg_color: app.theme_cls.primary_color

<AddMembersWindow>:
    name: 'Add Member Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Add Member"
            use_overflow: True
            elevation: 10
            pos_hint: {"top": 1}
            left_action_items: [['arrow-left', lambda x:root.parent.parent.switch_screen("Members Screen", "right")]]
            right_action_items: [['content-save']]
        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: "20dp"
                padding: "20dp", "20dp", "20dp", "20dp"
                MDCard:
                    orientation: "vertical"
                    size_hint: .98, None
                    height: member_details.height
                    #focus_behavior: True
                    #ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    radius: 12
                    MDBoxLayout:
                        id: member_details
                        orientation: "vertical"
                        spacing: "10dp"
                        adaptive_height: True
                        padding: "20dp", "20dp", "20dp", "20dp"
                        MDLabel:
                            text: "Members Details"
                            theme_text_color: "Primary"
                            font_style: "H5"
                            bold: True
                            adaptive_height: True
                        #MDSeparator:
                        MDTextField:
                            id: surname
                            hint_text: "Surname"
                            on_focus: True
                        MDTextField:
                            id: first_name
                            hint_text: "First Name"
                        MDTextField:
                            id: date_of_birth
                            hint_text: "Date of Birth"
                        MDTextField:
                            id: gender
                            hint_text: "Gender"
                        MDTextField:
                            id: contact_details
                            hint_text: "Contact Details"
                        MDTextField:
                            id: physical_address
                            hint_text: "Physical Address"
                        MDTextField:
                            id: marital_status
                            hint_text: "Marital Status ID"
                        MDTextField:
                            id: member_status_id
                            hint_text: "Member Status ID"
                        MDTextField:
                            id: membership_id
                            hint_text: "Membership ID"
                        MDTextField:
                            id: section_id
                            hint_text: "Section ID"

<EditMembersWindow>:
    name: 'Edit Member Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Edit Member"
            use_overflow: True
            elevation: 10
            pos_hint: {"top": 1}
            left_action_items: [['arrow-left', lambda x:root.parent.parent.switch_screen("Members Screen", "right")]]
            right_action_items: [['delete'], ['content-save']]
        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: "20dp"
                padding: "20dp", "20dp", "20dp", "20dp"
                MDCard:
                    orientation: "vertical"
                    size_hint: .98, None
                    height: member_details.height
                    #focus_behavior: True
                    #ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    radius: 12
                    MDBoxLayout:
                        id: member_details
                        orientation: "vertical"
                        spacing: "10dp"
                        adaptive_height: True
                        padding: "20dp", "20dp", "20dp", "20dp"
                        MDLabel:
                            text: "Member Details"
                            theme_text_color: "Primary"
                            font_style: "H5"
                            bold: True
                            adaptive_height: True
                        MDTextField:
                            id: id
                            hint_text: "ID"
                            readonly: True
                        MDTextField:
                            id: surname
                            hint_text: "Surname"
                            on_focus: True
                        MDTextField:
                            id: first_name
                            hint_text: "First Name"
                        MDTextField:
                            id: date_of_birth
                            hint_text: "Date of Birth"
                        MDTextField:
                            id: gender
                            hint_text: "Gender"
                        MDTextField:
                            id: contact_details
                            hint_text: "Contact Details"
                        MDTextField:
                            id: physical_address
                            hint_text: "Physical Address"
                        MDTextField:
                            id: marital_status
                            hint_text: "Marital Status ID"
                        MDTextField:
                            id: member_status_id
                            hint_text: "Member Status ID"
                        MDTextField:
                            id: membership_id
                            hint_text: "Membership ID"
                        MDTextField:
                            id: section_id
                            hint_text: "Section ID"