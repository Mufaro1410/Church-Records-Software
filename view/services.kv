#:kivy 2.0.0

<ServicesWindow>:
    ScreenManager:
        id: services_screen_manager
        ServicesMainWindow:
        AddServicesWindow:
        EditServicesWindow:

<ServicesMainWindow>:
    name: 'Services Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Services"
            use_overflow: True
            elevation: 10
            pos_hint: {"top": 1}
            #left_action_items: [['arrow-left', lambda x:root.parent.parent.switch_screen("Home Screen", "right")]]
            right_action_items: [['magnify']]
        ScrollView:
            MDList:
                id: services_list
        MDFloatingActionButton:
            icon: "plus"
            anchor: "right"
            on_release: root.parent.parent.switch_screen("Add Services Screen", "left")
            pos_hint: {"center_x": .95, "center_y": .5}
            #md_bg_color: app.theme_cls.primary_color

<AddServicesWindow>:
    name: 'Add Services Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Add Service"
            use_overflow: True
            elevation: 10
            pos_hint: {"top": 1}
            left_action_items: [['arrow-left', lambda x:root.parent.parent.switch_screen("Services Screen", "right")]]
            right_action_items: [['content-save']]
        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: "20dp"
                padding: "20dp", "20dp", "20dp", "20dp"
                MDCard:
                    orientation: "vertical"
                    size_hint: .98, None
                    height: services_details.height
                    #focus_behavior: True
                    #ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    radius: 12
                    MDBoxLayout:
                        id: services_details
                        orientation: "vertical"
                        spacing: "10dp"
                        adaptive_height: True
                        padding: "20dp", "20dp", "20dp", "20dp"
                        MDLabel:
                            text: "Service Details"
                            theme_text_color: "Primary"
                            font_style: "H5"
                            bold: True
                            adaptive_height: True
                        #MDSeparator:
                        MDTextField:
                            id: date
                            hint_text: "Date"
                        MDTextField:
                            id: preacher
                            hint_text: "Preachor"
                        MDTextField:
                            id: litegist_one
                            hint_text: "Litegist 1"
                        MDTextField:
                            id: litegist_two
                            hint_text: "Litegist 2"
                        MDTextField:
                            id: choir
                            hint_text: "Choir"
                        MDTextField:
                            id: preaching_topic
                            hint_text: "Preaching Topic"
                        MDTextField:
                            id: preaching_verses
                            hint_text: "Preaching Verses"

<EditServicesWindow>:
    name: 'Edit Services Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Edit Service"
            use_overflow: True
            elevation: 10
            pos_hint: {"top": 1}
            left_action_items: [['arrow-left', lambda x:root.parent.parent.switch_screen("Services Screen", "right")]]
            right_action_items: [['delete'], ['content-save']]
        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: "20dp"
                padding: "20dp", "20dp", "20dp", "20dp"
                MDCard:
                    orientation: "vertical"
                    size_hint: .98, None
                    height: services_details.height
                    #focus_behavior: True
                    #ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    radius: 12
                    MDBoxLayout:
                        id: services_details
                        orientation: "vertical"
                        spacing: "10dp"
                        adaptive_height: True
                        padding: "20dp", "20dp", "20dp", "20dp"
                        MDLabel:
                            text: "Service Details"
                            theme_text_color: "Primary"
                            font_style: "H5"
                            bold: True
                            adaptive_height: True
                        MDTextField:
                            id: date
                            hint_text: "Date"
                        MDTextField:
                            id: preacher
                            hint_text: "Preachor"
                        MDTextField:
                            id: litegist_one
                            hint_text: "Litegist 1"
                        MDTextField:
                            id: litegist_two
                            hint_text: "Litegist 2"
                        MDTextField:
                            id: choir
                            hint_text: "Choir"
                        MDTextField:
                            id: preaching_topic
                            hint_text: "Preaching Topic"
                        MDTextField:
                            id: preaching_verses
                            hint_text: "Preaching Verses"