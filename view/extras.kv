                    orientation: "vertical"
                    size_hint: .98, None
                    height: member_details.height
                    #focus_behavior: True
                    #ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    radius: 12
                    MDBoxLayout:
                        id: member_details
                        orientation: "vertical"
                        spacing: "10dp"
                        adaptive_height: True
                        padding: "20dp", "20dp", "20dp", "20dp"
                        MDLabel:
                            text: "Section Details"
                            theme_text_color: "Primary"
                            font_style: "H5"
                            bold: True
                            adaptive_height: True
                        MDSeparator:
                        MDTextField:
                            id: section_number
                            hint_text: "Section Number"
                        MDTextField:
                            id: area
                            hint_text: "Area"
                        MDTextField:
                            id: section_leader
                            hint_text: "Section Leader - Member ID"
                        MDTextField:
                            id: vice_section_leader
                            hint_text: "Vice Section Leader - Member ID"
                        MDTextField:
                            id: treasurer
                            hint_text: "Treasurer - Member ID"
                        MDTextField:
                            id: number_of_families
                            hint_text: "Number of Families"

