#:kivy 2.0.0

<ExtrasWindow>:
    name: 'Extras Screen'
    extras_screen_manager: extras_screen_manager

    ScreenManager:
        id: extras_screen_manager
        ExtrasMainWindow:

<ExtrasMainWindow>:
    name: 'Extras Home Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            pos_hint: {"top": 1}
            title: 'Extras'
            left_action_items: [['menu', lambda x: app.root.home_window.home_nav_drawer.set_state("toggle")]]
            right_action_items: [['dots-vertical']]
        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: "20dp"
                padding: "20dp", "20dp", "20dp", "20dp"
                OneLineIconListItem:
                    text: 'Sections'
                    on_release: root.parent.parent.switch_screen("Sections Screen", "left")
                OneLineIconListItem:
                    text: 'Membership'
                    on_release: root.parent.parent.switch_screen("Membership Screen", "left")
                OneLineIconListItem:
                    text: 'Member Status'
                    on_release: root.parent.parent.switch_screen("Member Status Screen", "left")
                OneLineIconListItem:
                    text: 'Marital Status'
                    on_release: root.parent.parent.switch_screen("Marital Status Screen", "left")
                OneLineIconListItem:
                    text: 'Users'
                    on_release: root.parent.parent.switch_screen("Users Screen", "left")