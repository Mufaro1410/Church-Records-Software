<AddSectionsWindow>:
    name: 'Add Sections Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Add Section"
            use_overflow: True
            elevation: 10
            pos_hint: {"top": 1}
            left_action_items: [['arrow-left', lambda x:root.parent.parent.switch_screen("Extras Home", "right")]]
            right_action_items: [['content-save', lambda x: root.create_section()]]
        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: "20dp"
                padding: "20dp", "20dp", "20dp", "20dp"
