#:kivy 2.0.0

<UsersWindow>:
    name: 'Users Screen'
    users_screen_manager: users_screen_manager
    ScreenManager:
        id: users_screen_manager
        UsersHomeWindow:
        AddUsersWindow:
        EditUsersWindow:

<UsersHomeWindow>:
    name: 'Users Home Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Users"
            use_overflow: True
            elevation: 10
            pos_hint: {"top": 1}
            left_action_items: [['arrow-left', lambda x: root.parent.parent.parent.parent.switch_screen("Extras Home Screen", "right")]]
            # right_action_items: [['magnify']]
        MDCard:
            orientation: "vertical"
            size_hint: 1, 1
            #height: users.height
            #focus_behavior: True
            #ripple_behavior: True
            pos_hint: {"center_x": .5, "center_y": .5}
            #padding: "20dp", "20dp", "20dp", "20dp"
            padding: dp(20)
            elevation: 0
            radius: 0
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                MDIconButton:
                    icon: 'magnify'
                MDTextField:
                    id: search_field
                    hint_text: 'Search Section'
                    on_text: root.set_search_sections(self.text, True)
            RecycleView:
                id: sections_list
                key_viewclass: 'viewclass'
                key_size: 'height'
                #pos_hint:{'center_x': 0.5, 'center_y': 0.5}
                RecycleBoxLayout:
                    padding: dp(10)
                    default_size: None, dp(48)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    callback: True
        MDFloatingActionButton:
            icon: "plus"
            anchor: "right"
            on_release: root.parent.parent.switch_screen("Add Users Screen", "left")
            pos_hint: {"center_x": .95, "center_y": .5}
            #md_bg_color: app.theme_cls.primary_color


<AddUsersWindow>:
    name: 'Add Users Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Add User"
            use_overflow: True
            elevation: 10
            pos_hint: {"top": 1}
            left_action_items: [['arrow-left', lambda x:root.parent.parent.switch_screen('Users Home Screen', "right")]]
            right_action_items: [['content-save']]
        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: "20dp"
                padding: "20dp", "20dp", "20dp", "20dp"
                MDCard:
                    orientation: "vertical"
                    size_hint: .98, None
                    height: sections_details.height
                    #focus_behavior: True
                    #ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    radius: 12
                    MDBoxLayout:
                        id: sections_details
                        orientation: "vertical"
                        spacing: "10dp"
                        adaptive_height: True
                        padding: "20dp", "20dp", "20dp", "20dp"
                        MDLabel:
                            text: "User Details"
                            theme_text_color: "Primary"
                            font_style: "H5"
                            bold: True
                            adaptive_height: True
                        MDSeparator:
                        MDTextField:
                            id: username
                            hint_text: "Username"
                        MDTextField:
                            id: password
                            hint_text: "Password"
                        MDTextField:
                            id: member_id
                            hint_text: "Member ID"

<EditUsersWindow>:
    name: 'Edit Users Screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Edit User"
            use_overflow: True
            elevation: 10
            pos_hint: {"top": 1}
            left_action_items: [['arrow-left', lambda x:root.parent.parent.switch_screen('Marital Status Home Screen', "right")]]
            right_action_items: [['delete'], ['content-save']]
        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: "20dp"
                padding: "20dp", "20dp", "20dp", "20dp"
                MDCard:
                    orientation: "vertical"
                    size_hint: .98, None
                    height: sections_details.height
                    #focus_behavior: True
                    #ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    radius: 12
                    MDBoxLayout:
                        id: sections_details
                        orientation: "vertical"
                        spacing: "10dp"
                        adaptive_height: True
                        padding: "20dp", "20dp", "20dp", "20dp"
                        MDLabel:
                            text: "User Details"
                            theme_text_color: "Primary"
                            font_style: "H5"
                            bold: True
                            adaptive_height: True
                        MDSeparator:
                        MDTextField:
                            id: id
                            hint_text: "User ID"
                            readonly: True
                        MDTextField:
                            id: username
                            hint_text: "Username"
                        MDTextField:
                            id: password
                            hint_text: "Password"
                        MDTextField:
                            id: member_id
                            hint_text: "Member ID"